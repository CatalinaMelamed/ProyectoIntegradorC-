@model Mvc.Models.DataSelectList
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Las Rosas Carmesi</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Css/Design css.css" rel="stylesheet" />
    
    <link rel="stylesheet" href="~/Content/Multiselect/MultiSelectBoostrap.css" media="screen">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Multiselect/bootstrap.css" />
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <div>
        <h2>Restaurante- La Rosa Camersi</h2>
        <div class="form-group">

            @Html.ActionLink("Ir a Articulos", "Index", "Articulo", null, new { @class = "btn btn-danger" })
            @Html.ActionLink("Ir a Metodo de Pago", "Index", "MetodoPago", null, new { @class = "btn btn-danger" })
        </div>


    </div>
    <div>

        @Html.DropDownList("Clientes", Model.Clientes.Select(i => new SelectListItem { Text = i.NombreCompleto, Value = i.ClienteId.ToString() }), "Seleccionar Cliente")



        @*@Html.DropDownList("Articulos", Model.Articulos.Select( i => new SelectListItem { Text = i.NombrePrecio, Value = i.ArticuloId.ToString()}), "Seleccionar Articulos")*@

        <select multiple="multiple" id="Articulos" name="Articulos[]">
            @foreach (var articulo in Model.Articulos)
            {
                <option value='@articulo.ArticuloId'>@articulo.NombrePrecio</option>
            }

        </select>


        @*@Html.DropDownList("Articulos", Model.Articulos.Select(i => new SelectListItem { Text = i.NombrePrecio, Value = i.ArticuloId.ToString() }), "Seleccionar Articulo")*@

        @Html.DropDownList("Metodo de Pago", new List<SelectListItem>
        {
           new SelectListItem { Text = "Efectivo", Value = "1", Selected = true },
           new SelectListItem { Text = "Tarjeta Credito", Value = "2" },
           new SelectListItem { Text = "Tarjeta Debito", Value = "3" }
        }, "Seleccionar Metodo de Pago")

    </div>

    <input type="submit" value="Calcular" class="btn btn-danger" />
    <script src="~/Scripts/Multiselect/bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/Multiselect/MultiSelect.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/Multiselect/MultiSelectCustom.js"></script>

</body>

</html>
